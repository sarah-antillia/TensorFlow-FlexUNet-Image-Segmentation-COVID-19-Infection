; train_eval_infer.config
; 2025/08/03 (C) antillia.com
; COVID-19 segmentation
[model]
model         = "TensorFlowFlexUNet"

generator     =  False

image_width    = 512
image_height   = 512
image_channels = 3
input_normalize = False
normalization  = False
num_classes    = 4

base_filters   = 16
base_kernels   = (9,9)
num_layers     = 8
dropout_rate   = 0.04
dilation       = (1,1)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00007
clipvalue      = 0.4

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 
loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
epochs        = 100
batch_size    = 2


; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/COVID-19/train/images/"
masks_dir     = "../../../dataset/COVID-19/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.4
reducer_patience   = 4

epoch_change_infer     = True
epoch_change_infer_dir =  "./epoch_change_infer"
num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/COVID-19/valid/images/"
masks_dir  = "../../../dataset/COVID-19/valid/masks/"

[test] 
images_dir = "../../../dataset/COVID-19/test/images/"
masks_dir  = "../../../dataset/COVID-19/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"

; 1+3 classes
; BGR
; categories  = ["right lung", "left lung", "infection"]
; RGB colors         right_lung:green,left_lung:blue,  infection:red     
rgb_map = {(0,0,0):0,(0,255,0):1,     (0,0, 255):2,    (255, 0, 0):3, }


